{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": false,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "importHelpers": true,
    "lib": [ "es2019", "dom" ]
  },
  "include": [
    "./src/**/*"
  ]
}
